<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cystrix.blog.dao.ArticleImgDao">

    <insert id="add" parameterType="com.cystrix.blog.entity.ArticleImg" useGeneratedKeys="true" keyProperty="id">
        insert into article_img(id, article_id, name, type, size, uri)
        value (null, #{articleId}, #{name}, #{type}, #{size}, #{uri})
    </insert>

</mapper>