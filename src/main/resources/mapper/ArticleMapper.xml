<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cystrix.blog.dao.ArticleDao">
    <sql id="tb">`article`</sql>
    <sql id="baseCols">
    `id`,`title`,`content`,`digest`,`comment_count`,`view_count`, `like_count`,`hot_rank`,
    `create_time`,`update_time`,`is_delete`
    </sql>
    <insert id="insert" parameterType="com.cystrix.blog.entity.Article" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO <include refid="tb"/>(<include refid="baseCols"/>)
        VALUE (NULL, #{title}, #{cotent}, #{digest}, #{commentCount}, #{viewCount}, #{hotRank})
    </insert>
    
    <select id="selectPage" resultType="com.cystrix.blog.entity.Article">
        SELECT <include refid="baseCols"/> FROM <include refid="tb"/>
        ORDER BY `id` DESC
        LIMIT #{pageSize}
        OFFSET #{offset}
    </select>

    <select id="selectPageByYear" resultType="com.cystrix.blog.entity.Article">
        SELECT <include refid="baseCols"/> FROM <include refid="tb"/>
        WHERE YEAR(`create_time`) = #{year}
        ORDER BY `id` DESC
        LIMIT #{pageSize}
        OFFSET #{offset}
    </select>

    <select id="selectArticleById" resultType="com.cystrix.blog.entity.Article">
        SELECT <include refid="baseCols"/> FROM <include refid="tb"/>
        WHERE `id` = #{id}
    </select>
</mapper>